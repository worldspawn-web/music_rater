{
  "name": "yandex-music-rater",
  "version": "0.1.0",
  "description": "A tool that allows you to see your real preferences in music.",
  "author": "Michael 'Worldspawn' Lozickii",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build": "electron-builder --mac --win"
  },
  "build": {
    "appId": "com.worldspawn.yandexrater",
    "productName": "Yandex Music Rater",
    "mac": {
      "target": "dmg",
      "icon": "public/icon.jpg",
      "category": "public.app-category.music"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.jpg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "24.7.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.14",
    "typescript": "5.9.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.545.0",
    "next": "15.5.4",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7"
  }
}
